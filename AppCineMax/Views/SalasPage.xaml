<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCineMax.Views.SalasPage">
    <ContentPage.Content>
        <StackLayout>

            <!-- Representación visual de la pantalla -->
            <Frame BackgroundColor="Black" HeightRequest="40" CornerRadius="0,0,100,0" Margin="5,10,5,25">
                <Label Text="Pantalla" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="Title" Margin="0,0,0,0"/>
            </Frame>

            <Grid x:Name="seatGrid" HorizontalOptions="CenterAndExpand" Padding="15">
                <!-- Los asientos se insertan aquí -->
                <!-- Por ejemplo, para una sala de 5x5 -->
            </Grid>

            <Button Text="Reservar Asiento(s)" Clicked="OnReserveSeatClicked" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>